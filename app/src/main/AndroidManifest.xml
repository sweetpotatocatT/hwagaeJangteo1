<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="www.hwagae.com.hwagae">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="com.google.android.gms.ads.www.hwagae.com.hwagae"
        android:value="ca-app-pub-8421245306171728~1702790994" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/test2"
        android:label="화개장터"
        android:roundIcon="@drawable/test2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".JoinActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--
            <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>
        -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainViewActivity"
            android:label="@string/title_activity_main_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChatActivity"
            android:label="@string/title_activity_chat"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChatRoomActivity"
            android:label="@string/title_activity_chat_room"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PrLoginActivity"
            android:label="화개장터"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MypageActivity"
            android:label="@string/title_activity_mypage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClickitemActivity"
            android:label="@string/title_activity_clickitem"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ItemviewActivity"
            android:label="@string/title_activity_itemview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WriteActivity"
            android:label="@string/title_activity_write"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserPageActivity"
            android:label="@string/title_activity_user_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".BankActivity" />
        <activity
            android:name=".ItemList"
            android:label="@string/title_activity_item_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JoinUs"
            android:label="@string/title_activity_join_us"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>